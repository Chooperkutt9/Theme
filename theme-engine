	play ${loc11}/stdout.wav &> /dev/null &
	RCUSR
        cd ${loc3}
        bash highlight.features.theme

elif [[ $option = "6" ]] || [[ $option = "06" ]];then
	play ${loc11}/stdout.wav &> /dev/null &
	cd ${loc3}
	bash about.theme

else PUT 16 1
	play ${loc11}/error.wav &> /dev/null &
       echo -e "\e[0;1;100m              ✘ You entered Wrong Input !              ${reset}";echo;RCUSR
   fi
