         PUT 15 1
       line4
      PUT 14 25
    printf "\e[0;1;7m"
  read option
echo -ne "${reset}"

#..............................................................

if [[ $option = "1" ]] || [[ $option = "01" ]];then
	play ${loc11}/stdout.wav &> /dev/null &
	echo
	cd ${loc3}
