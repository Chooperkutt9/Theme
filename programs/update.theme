remove_previous_file() {
if [[ -d "$PREFIX/share/Theme-Engine" &&  -f "$PREFIX/bin/theme-engine" ]];then
rm -rf $PREFIX/share/Theme-Engine
cd $PREFIX/share ;fi ;}

spin () {
banner
local pid=$!
local delay=0.05
local spinner=( '⠋' '⠙' '⠹' '⠼' '⠴' '⠦' '⠧' '⠇' '⠏' )
while [ "$(ps a | awk '{print $1}' | grep $pid)" ]; do
for i in "${spinner[@]}"
do
        HIDE
        echo -ne "\e[0;1;48;2;41;121;255m\r [!] Updating Theme-Engine... \e[0;1;90;48;2;0;230;118m [ $i ] \033[3m\033[0m   ";
        sleep $delay
        printf "\b\b\b\b\b\b\b\b\b\b\b\b\b\b\b\b\b";
done
done
printf "\b\b\b\b\b\b\b\b\b\b\b\b\b\b\b\b\b\b\b\b\b\b\b"
printf "\e[0;1;48;2;41;121;255m\e[0;1;90;48;2;0;230;118m [√] Theme-Engine Updated Successful \e[0m\n"
echo"";
NORM
}

exit_on_signal_SIGINT () {
if [ ! -d "$PREFIX/share/Theme-Engine" ];then
    echo -ne "\r"
    echo -e "\e[1;38;2;240;0;0mTheme-Engine :  Installation Cancel !    "
    NORM
    exit
else
    echo -ne "\r"
    echo -e "\e[1;48;2;240;0;0m Theme-Engine :  Upadating Cancel !  "
    NORM
    exit
fi
}

trap exit_on_signal_SIGINT SIGINT

